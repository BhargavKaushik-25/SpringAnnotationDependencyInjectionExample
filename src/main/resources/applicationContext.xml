<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- if in your intellij annotations are not enabled then use this tag
     <context:annotation-config></context:annotation-config>
     -->
    <!-- we are providing the name of the package in which all the classes and
    interface is present in which @component is present -->
    <context:component-scan base-package="ComponentAnnotation" />
    <context:component-scan base-package="DependencyInjection1" />
    <context:component-scan base-package="ShoppingPackage" />
</beans>